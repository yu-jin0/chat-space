.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name 
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
          =link_to "#" , class: "icon"  do
            = icon("fas","edit") 
        %li.side-header__btox__menu__edit-user
          =link_to edit_user_path(current_user)  do
            = icon("fas", "cog")
  %div.groups
    =link_to "#" do
      .group
        %p.group__group-name d
        %p.group__latest-message ddd
    =link_to "#" do
      .group
        %p.group__group-name w
        %p.group__latest-message www
